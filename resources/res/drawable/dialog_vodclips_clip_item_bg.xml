<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:enterFadeDuration="200" android:exitFadeDuration="200">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#ffffff"/>
            <solid android:color="#80000000"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="#ffffff"/>
            <solid android:color="#60000000"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#20ffffff"/>
            <solid android:color="#40000000"/>
        </shape>
    </item>
</selector>
