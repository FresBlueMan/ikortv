<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#60000000" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center" android:id="@+id/content" android:clipChildren="false" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:clickable="true" android:clipChildren="false" android:clipToPadding="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/width_15_320" android:layout_marginTop="@dimen/width_10_320" android:layout_marginRight="@dimen/width_15_320" android:layout_marginBottom="@dimen/width_15_320" android:minWidth="@dimen/height_120_320">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/textsize_big" android:textColor="#848484" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.victor.loading.rotate.RotateLoading android:id="@+id/loading" android:layout_width="@dimen/width_20_320" android:layout_height="@dimen/width_20_320" android:layout_marginLeft="@dimen/width_10_320" app:loading_color="#2598e5" app:loading_speed="6" app:loading_width="2dp"/>
            </LinearLayout>
            <com.iptv2.control.EditText android:id="@+id/edit_username" android:layout_marginLeft="@dimen/width_10_320" android:layout_marginTop="@dimen/width_10_320" android:layout_marginRight="@dimen/width_10_320" android:maxLength="100" android:inputType="textVisiblePassword" android:imeOptions="actionNext" style="@style/Dialog_Edit"/>
            <com.iptv2.control.EditText android:id="@+id/edit_password" android:layout_marginLeft="@dimen/width_10_320" android:layout_marginTop="@dimen/width_15_320" android:layout_marginRight="@dimen/width_10_320" android:maxLength="60" android:inputType="textPassword" android:imeOptions="actionNext" style="@style/Dialog_Edit"/>
            <com.iptv2.control.EditText android:id="@+id/edit_password2" android:layout_marginLeft="@dimen/width_10_320" android:layout_marginTop="@dimen/width_15_320" android:layout_marginRight="@dimen/width_10_320" android:maxLength="60" android:inputType="textPassword" android:imeOptions="actionDone" style="@style/Dialog_Edit"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/button_group" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/width_20_320">
                <com.iptv2.control.TextView android:id="@+id/btn_ok" style="@style/Dialog_Button"/>
                <com.iptv2.control.TextView android:id="@+id/btn_signin" android:visibility="gone" style="@style/Dialog_Button"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
