<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="150" android:exitFadeDuration="150"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#dd383838" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="#dd383838" />
            <stroke android:width="2.0dip" android:color="@color/widget_live_overlay_focus_border_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#ba383838" />
        </shape>
    </item>
</selector>